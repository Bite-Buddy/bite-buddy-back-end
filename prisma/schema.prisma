generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  supabase_id  String   @unique
  email        String   @unique
  kitchens     UserKitchens[] 
  @@map("user")
}

model Kitchen {
id           Int      @id @default(autoincrement())
name         String    @db.VarChar(255)
users        UserKitchens[]
food_list    Food[]  
@@map("kitchen")
}

model Food {
  id           Int        @id @default(autoincrement())
  name         String     @db.VarChar(255)
  bought_on     DateTime   @default(now())
  updated_on    DateTime   @default(now())
  inStock       Boolean    @default(true)
  kitchen      Kitchen    @relation(fields: [kitchen_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  kitchen_id    Int
  @@map("food")
}

model UserKitchens {
  kitchen      Kitchen  @relation(fields: [kitchen_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  kitchen_id    Int 
  user         User     @relation(fields:  [user_id], references: [id])
  user_id       Int      

  @@id([kitchen_id, user_id])
  @@map("user_kitchens")
}

