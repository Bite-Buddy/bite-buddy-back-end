generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int      @id @default(autoincrement()) 
  email        String   @unique
  kitchens     UserKitchens[]
  @@map("user")
}

model Kitchen {
id           Int      @id @default(autoincrement())
users        UserKitchens[]
food_list     Food[]
@@map("kitchen")
}

model UserKitchens {
  kitchen      Kitchen  @relation(fields: [kitchen_id], references: [id])
  kitchen_id    Int
  user         User     @relation(fields:  [user_id], references: [id])
  user_id       Int      

  @@id([kitchen_id, user_id])
  @@map("user_kitchens")
}

model Food {
  id           Int        @id @default(autoincrement())
  name         String     @db.VarChar(255)
  bought_on     DateTime   @default(now())
  updated_on    DateTime   @default(now())
  kitchen      Kitchen    @relation(fields: [kitchen_id], references: [id])
  kitchen_id    Int
  @@map("food")
}